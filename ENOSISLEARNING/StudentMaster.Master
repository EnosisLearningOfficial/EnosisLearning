                            <div class="candidate-course">
                                <b style="font-weight:900;font-size:0.910rem">Course:</b> <asp:Label ID="lblCourse" runat="server" /><br />
                            </div>
                        </div>
                    </div>

                    <hr class="my-2 mx-3" />

                    <ul class="nav flex-column px-2 pb-3 sidebar-menu">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="menu-icon"><i class="fa-solid fa-house"></i></span>
